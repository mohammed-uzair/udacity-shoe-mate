<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:padding">10dp</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="suffixTextColor">?colorAccent</item>
        <item name="startIconTint">@color/green</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">?colorPrimary</item>
        <item name="hintTextColor">?colorAccent</item>
    </style>

    <style name="SubTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
        <item name="android:layout_margin">@dimen/screen_default_margin</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShoeDetailStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_top_edit</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="FloatingButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/screen_default_margin</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:contentDescription">
            @string/floating_button_add_shoe_content_description
        </item>
    </style>

    <style name="ShoeDetailTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>